<div class="post">
    {{#each posts}}
    <article class="card">
        <div class="header flex-row justify-space-between">
            <h2>
                <a href="/posts/{{id}}">{{title}}</a>
            </h2>
            <div>
                Posted by {{User.username}} on {{format_date createdAt}}
            </div>
        </div>
        <div class="card-body">
            {{body}}
        </div>
    </article>
    {{/each}}
</div>
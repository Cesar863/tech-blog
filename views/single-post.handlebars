<div class="post">
    <article class="card border border-danger">
        <div class="card-header text-center text-dark bg-danger">
            <h2>{{post.title}}</h2>
            <div>
                Posted by {{post.User.username}} on {{format_date post.createdAt}}
            </div>
        </div>
        <div class="card-body text-dark h5">
            {{post.body}}
        </div>
    </article>

    {{#if post.Comments}}
    <section class="card border border-danger">
        <div class="card-header border border-danger bg-dark text-white">
            <h3>Comments</h3>
        </div>

        <div class="card-body text-dark border border-danger">
            {{#each post.Comments}}
            <div>
                <p class="m-1">
                    {{body}}
                </p>
                <p>
                    &mdash; {{User.username}}, {{format_date createdAt}}
                </p>
            </div>
            {{/each}}
        </div>
    </section>
    {{/if}}

    <form id="new-comment-form" class="card border border-danger">
        <div class="card-header bg-dark text-white border border-danger">
            <h3>Add a Comment</h3>
        </div>

        <div class="card-body d-flex flex-column bg-dark">
            <input type="hidden" name="post-id" value="{{post.id}}" />

            <label class="form-label text-white" for="comment-body">Comment</label>

            <textarea name="comment-body" class="form-input"></textarea>

            <button type="submit" class="btn btn-danger">Submit</button>
        </div>
    </form>
</div>

<script src="/javascript/comment.js"></script>
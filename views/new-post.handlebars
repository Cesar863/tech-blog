<div class="post card border border-danger col-auto">
    <div class="card-header border border-danger">
        <h2>Create a Post</h2>
    </div>
    <form id="new-post-form" class="card-body border-danger d-flex flex-column">
        <label class="form-label h4" for="post-title">Title</label>
        <input type="text" name="post-title" class="form-input" />

        <label class="form-label h4" for="post-body">Content</label>
        <textarea name="post-body" class="form-input"></textarea>

        <button type="submit" class="btn btn-danger border border-dark m-1">Create</button>
    </form>
</div>

<script src="/javascript/new.js"></script>
<div class="card border border-white">
    <div class="card-header bg-danger border border-white text-dark">
        <h2>Login</h2>
    </div>
    <form id="login-form" class="card-body d-flex justify-content-center flex-column h4">
        <div class="d-flex flex-column justify-content-center">
            <label for="username-input-login">Username</label>
            <input type="text" id="username-input-login" />
        </div>
        <div class="form-label d-flex flex-column">
            <label for="password-input-login">Password</label>
            <input type="password" id="password-input-login" />
        </div>
        <button type="submit" id="login-btn" class="btn btn-danger d-flex justify-content-center border border-dark m-1">Login</button>
        <a type="button" class="btn btn-danger d-flex justify-content-center border border-dark m-1" href="/signup">Sign up</a>
    </form>
</div>

<script src="/javascript/login.js"></script>